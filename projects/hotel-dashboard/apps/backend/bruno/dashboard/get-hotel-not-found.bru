meta {
  name: Get Hotel - Not Found (404)
  type: http
  seq: 7
}

get {
  url: {{baseUrl}}/api/dashboard/hotel/nonexistent_hotel
  body: none
  auth: none
}

assert {
  res.status: eq 404
}

tests {
  test("should return 404 for unknown hotel", function() {
    expect(res.getStatus()).to.equal(404);
  });

  test("should include error detail", function() {
    const data = res.getBody();
    expect(data.detail).to.include("nonexistent_hotel");
  });
}
